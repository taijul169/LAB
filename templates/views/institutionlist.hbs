                                            const upazila_el =  document.getElementById('upazila'); 

                                            function display(id,division,district,upazila){
                                                division_el.value = division;
                                                iddiv_el.value =  id;
                                                district_el.value =  district;
                                                upazila_el.value =  upazila;
                                                
                                            }

                                            //onsubmit
