             <section class="content">
                    <div class="container-fluid">
                        <style> 
                            #searchResult li{
                                background: white;
                                padding: 5px; 
                                color: black;
                                list-style-type: none;
                                }

                                #searchResult li:nth-child(even){
                                background: #eeeeee;
                                color: black;
                                }

                                #searchResult li:hover{
                                    cursor: pointer;
                                    background-color: #707cd2;
                                    color: white;
                                }
                                #searchResult{
                                    list-style: none;
                                    padding: 0px;
                                    position: absolute;
                                    z-index: 9999;
                                }
                                @media  only screen and (max-width: 768px) {
                                /* For desktop: */
                                    
                                    #searchResult{
                                        list-style: none;
                                        padding: 0px;
                                        width: 13rem;
                                        position: absolute;
                                        margin-left: 27%;
                                        top: 2.3rem;
                                        z-index: 9999;
                                    }
                                }
                            </style>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-info" >{{bloodgroup}}</span>
                            <div class="info-box-content">
                            <span class="info-box-text">Donor</span>
                            <span class="info-box-number count" id="A_positive">{{bloodData.length}}</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                        </div>
                        <!-- /.col -->
                    </div>
                              
                               
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-warning card-outline">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped dt-responsive nowrap" id="active_blog" width="100%">
                                            <thead>
                                            <tr>
                                                <th>#SL</th>
                                                <th>Blood Group</th>
                                                <th>Name</th>
                                                <th>Registration No</th>
                                                <th>Phone</th>
                                                <th>Profession</th>
                                                <th>Action</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {{#each bloodData}}
                                                {{!-- single-donor --}}

                                            <tr>
                                                <td>{{this.id}}</td>
                                                <td>{{this.bloodgroup}}</td>
                                                <td>{{this.firstname}}</td>
                                                <td>000000{{this.id}}</td>
                                                <td>{{this.mobile}}</td>
                                                <td>{{this.profession}}</td>

                                                <td>
                                                    <div class="btn-group">
                                                        <a href="/users/singledonorview/{{this.id}}" role="button" class="btn btn-readmore btn-info btn-sm"><i class="fa fa-eye"></i></a>
                                                    </div>
                                                    
                                                </td>

                                            </tr>
                                            {{/each}}

                                            {{#if nodata}}
                                              <tr><div class="card">{{nodata}}</div></tr>
                                            
                                            {{/if}}                      
                                            </tbody>
                                        </table>
                                    </div>
                                    

                                </div>
                            </div>
                        </div>
                    </div>

<script>
       //-------dynamic upazila -----------------------------------
       const hiddendata = document.getElementById("bloodhidden").value;
       const A_positive = document.getElementById("A_positive");
       const B_positive = document.getElementById("B_positive");
       const O_positive = document.getElementById("O_positive");
       const AB_positive = document.getElementById("AB_positive");
       const A_negative = document.getElementById("A_negative");
       const B_negative = document.getElementById("B_negative");
       const AB_negative = document.getElementById("AB_negative");
       const O_negative = document.getElementById("O_negative");

       const parsedata = JSON.parse(hiddendata);
       //A+
        let answer_one = (parsedata.filter(order => (order.bloodgroup === "A+")))
        A_positive.innerText = answer_one.length;
        //B+
         let answer_two = (parsedata.filter(order => (order.bloodgroup === "B+")))
        B_positive.innerText = answer_two .length;
          //B+
         let answer_three = (parsedata.filter(order => (order.bloodgroup === "O+")))
        O_positive.innerText = answer_three.length;
          //B+
         let answer_four = (parsedata.filter(order => (order.bloodgroup === "AB+")))
        AB_positive.innerText = answer_four.length;
          //B+
         let answer_five = (parsedata.filter(order => (order.bloodgroup === "A-")))
        A_negative.innerText = answer_five.length;
          //B+
         let answer_six = (parsedata.filter(order => (order.bloodgroup === "B-")))
        B_negative.innerText = answer_six.length;
          //B+
         let answer_seven = (parsedata.filter(order => (order.bloodgroup === "AB-")))
        AB_positive.innerText = answer_seven.length;
          //B+
         let answer_eight = (parsedata.filter(order => (order.bloodgroup === "O-")))
        O_negative.innerText = answer_eight.length;
</script>
