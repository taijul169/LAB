                                                <tr>
                                                    <td>{{this.id}}</td>
                                                    <td>{{this.paymentdate}}</td>
                                                    <td>{{this.paymentfor}}</td>
                                                    <td>{{this.amount}}</td>
                                                    
                                                    <td> {{paymentStatus this.status}}  </td>
                                
                                                    <td>
                                                        <div class="btn-group">
                                                            <a onclick="displayDataIntoModal({{this.id}},'{{this.paymenttitle}}','{{this.paymentfor}}','{{this.amount}}','{{this.paymentdate}}','{{this.transactionid}}','{{this.senderno}}','{{this.paymentmethod}}','{{this.email}}')" data-bs-toggle="modal" data-bs-target="#staticBackdrop" role="button" class="btn btn-readmore btn-info btn-sm">Details</a>
                                                            <a onclick="return confirm('are you sure to delete this permanantly??')" href="/users/deletemypayment/{{this.id}}" role="button" class="btn btn-readmore btn-danger ml-1 btn-sm"><i class="fa fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                {{/each}}                      
                                                </tbody>
                                            </table>
                                        </div>
                                        

                                    </div>
                                </div>
